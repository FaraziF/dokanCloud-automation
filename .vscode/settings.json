{
    "workbench.preferredDarkColorTheme": "Quiet Light",
    "files.autoSave": "onFocusChange",
    "workbench.colorTheme": "Quiet Light",
    "workbench.preferredHighContrastColorTheme": "Quiet Light",
    "workbench.colorCustomizations": {
        "tab.activeBackground": "#b6f1d9"
    },
    "terminal.integrated.defaultProfile.osx": "/bin/zsh",
    "editor.fontSize": 16,
    "workbench.iconTheme": "vscode-icons",
    "coddx.taskBoard.fileList": "todo.md",
    
    // BDD/Cucumber Configuration - matches your actual folder structure
    "cucumberautocomplete.steps": [
        "features/step_definition/*.js",
        "features/step_definition/*.ts"
    ],
    "cucumberautocomplete.strictGherkinCompletion": true,
    "cucumberautocomplete.smartSnippets": true,
    "cucumberautocomplete.stepsInvariants": true,
    "cucumberautocomplete.customParameters": [
        {
            "parameter": "{string}",
            "value": "test"
        },
        {
            "parameter": "{int}",
            "value": "1"
        }
    ],
    "cucumberautocomplete.skipDocStringsFormat": true,
    "cucumberautocomplete.strictGherkinValidation": false,
    "cucumberautocomplete.gherkinDefinitionPart": "#language: en",
    "cucumberautocomplete.syncfeatures": "features/*.feature",
    
    // Disable settings cycling to prevent conflicts
    "settings.cycle": null,
    
    // Ensure BDD navigation works
    "cucumberautocomplete.strictGherkinCompletion": true,
    "cucumberautocomplete.smartSnippets": true,
    "cucumberautocomplete.stepsInvariants": true
}
